<h1>確認画面</h1>
<%= form_with(model: @post, url: posts_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
  <ul>
  <li><%= form.hidden_field :image_cache %></li>
  <li><%= form.hidden_field :title %></li>
  <li><%= form.hidden_field :content %></li>
  <li>title:<%= @post.title %></li>
  <li>content:<%= @post.content %></li>
  <li><%= form.submit "投稿する" %></li>
  </ul>
<% end %>
<%= form_with(model:@post, url:new_post_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>